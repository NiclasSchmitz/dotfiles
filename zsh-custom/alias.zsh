# notes
alias notes="cd $HOME/Documents/notes && vim ."
alias todo="vim $HOME/Documents/notes/todo.md"
alias quicknotes="vim $HOME/Documents/notes/quicknotes.md"

# journal
alias journal="cd $HOME/Documents/journal && vim ."
alias today="open_journal_today"
alias yesterday="open_journal_yesterday"
alias tomorrow="open_journal_tomorrow"

# yt-dlp
alias yt-mp3="yt-dlp --extract-audio --audio-format 'mp3' --audio-quality 0"
alias yt-video="yt-dlp -f bestvideo+bestaudio"
